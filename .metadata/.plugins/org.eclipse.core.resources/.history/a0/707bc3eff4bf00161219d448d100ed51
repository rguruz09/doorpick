	 			"ploc":ploc,"pdloc":pdloc,"pdate":pdate,"ptime":ptime,"slat":slat,"slong":slong,"desclat":desclat,"desclong":desclong,"sstatus" :sstatus}, 
	 			function(err, schedule){
	 				if(schedule){
